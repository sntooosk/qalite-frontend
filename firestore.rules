rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function userData() {
      return userDoc().data;
    }

    function userOrgId() {
      return userDoc().exists() ? userData().organizationId : null;
    }

    function isAdmin() {
      return isSignedIn()
        && (request.auth.token.admin == true
          || request.auth.token.role == 'admin'
          || (userDoc().exists() && userData().role == 'admin'));
    }

    function isOrgMember(orgId) {
      return isSignedIn() && userDoc().exists() && orgId != null && userOrgId() == orgId;
    }

    function isOrgMemberByOrganization(orgId) {
      return isSignedIn()
        && orgId != null
        && get(/databases/$(database)/documents/organizations/$(orgId))
          .data.members.hasAny([request.auth.uid]);
    }

    function isOrgMemberByStore(storeId) {
      return isSignedIn()
        && userDoc().exists()
        && get(/databases/$(database)/documents/stores/$(storeId)).data.organizationId == userOrgId();
    }

    function isOrgMemberByStoreMembership(storeId) {
      return isSignedIn()
        && get(/databases/$(database)/documents/organizations/$(get(/databases/$(database)/documents/stores/$(storeId)).data.organizationId))
          .data.members.hasAny([request.auth.uid]);
    }

    function isPublicEnvironment(environmentId) {
      return get(/databases/$(database)/documents/environments/$(environmentId))
        .data.publicShareLanguage != null;
    }

    match /users/{userId} {
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow read: if isAdmin()
        || (isSignedIn()
          && (request.auth.uid == userId
            || (userDoc().exists()
              && resource.data.organizationId != null
              && resource.data.organizationId == userOrgId())));
      allow update: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow delete: if false;
    }

    match /organizations/{orgId} {
      allow read: if isAdmin()
        || (isSignedIn()
          && (resource.data.members != null
            && resource.data.members.hasAny([request.auth.uid])));
      allow create, update, delete: if isAdmin();
    }

    match /stores/{storeId} {
      allow read: if isAdmin()
        || isOrgMember(resource.data.organizationId)
        || isOrgMemberByOrganization(resource.data.organizationId);
      allow create: if isAdmin()
        || isOrgMember(request.resource.data.organizationId)
        || isOrgMemberByOrganization(request.resource.data.organizationId);
      allow update: if isAdmin()
        || ((isOrgMember(resource.data.organizationId)
          || isOrgMemberByOrganization(resource.data.organizationId))
          && request.resource.data.organizationId == resource.data.organizationId);
      allow delete: if isAdmin()
        || isOrgMember(resource.data.organizationId)
        || isOrgMemberByOrganization(resource.data.organizationId);

      match /scenarios/{scenarioId} {
        allow read, write: if isAdmin() || isOrgMemberByStore(storeId);
      }

      match /suites/{suiteId} {
        allow read, write: if isAdmin() || isOrgMemberByStore(storeId);
      }

      match /categories/{categoryId} {
        allow read, write: if isAdmin() || isOrgMemberByStore(storeId);
      }
    }

    match /environments/{environmentId} {
      allow read: if isAdmin()
        || isOrgMemberByStore(resource.data.storeId)
        || isOrgMemberByStoreMembership(resource.data.storeId)
        || resource.data.publicShareLanguage != null;
      allow create: if isAdmin()
        || isOrgMemberByStore(request.resource.data.storeId)
        || isOrgMemberByStoreMembership(request.resource.data.storeId);
      allow update: if isAdmin()
        || ((isOrgMemberByStore(resource.data.storeId)
          || isOrgMemberByStoreMembership(resource.data.storeId))
          && request.resource.data.storeId == resource.data.storeId);
      allow delete: if isAdmin()
        || isOrgMemberByStore(resource.data.storeId)
        || isOrgMemberByStoreMembership(resource.data.storeId);

      match /bugs/{bugId} {
        allow read: if isAdmin() || isOrgMemberByStore(
          get(/databases/$(database)/documents/environments/$(environmentId)).data.storeId
        ) || isOrgMemberByStoreMembership(
          get(/databases/$(database)/documents/environments/$(environmentId)).data.storeId
        ) || isPublicEnvironment(environmentId);
        allow create, update, delete: if isAdmin() || isOrgMemberByStore(
          get(/databases/$(database)/documents/environments/$(environmentId)).data.storeId
        ) || isOrgMemberByStoreMembership(
          get(/databases/$(database)/documents/environments/$(environmentId)).data.storeId
        );
      }
    }
  }
}
